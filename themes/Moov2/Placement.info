<Placement>
  <Match ContentType="Page">
    <!-- Don't display publish date for pages. -->
    <Place Parts_Common_Metadata="-"/>
  </Match>

  <Match ContentType="Homepage">
    <!-- Don't display publish date on homepage. -->
    <Place Parts_Common_Metadata="-"/>
  </Match>

  <Match ContentType="Post">
    <Place Fields_MediaLibraryPicker="-" />
  </Match>

  <!-- Don't display page title on home page. -->
  <Match Path="/">
    <Place Parts_Title="-"/>
  </Match>

  <!-- Don't display page title on about page. -->
  <Match Path="/about">
    <Place Parts_Title="-"/>
  </Match>

  <!-- Don't display page title on work page. -->
  <Match Path="/work">
    <Place Parts_Title="-"/>
  </Match>
</Placement>
